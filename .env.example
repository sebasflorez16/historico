# ========================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ========================================
# IMPORTANTE: La base de datos correcta es 'historical' (NO 'agrotech')
# Usuario por defecto es 'postgres'
# Usa la MISMA CONTRASEÑA que funciona en pgAdmin

DATABASE_ENGINE=postgresql
DATABASE_NAME=historical
DATABASE_USER=postgres
DATABASE_PASSWORD=tu_password_de_pgadmin_aqui
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Clave API de EOSDA para acceso a datos satelitales
# Obtener en: https://eos.com/eos-data-analytics/
EOSDA_API_KEY=apk.tu_eosda_api_key_completa_aqui
EOSDA_BASE_URL=https://api-connect.eos.com

# Configuración de email
# Email: tu_email@gmail.com
# Contraseña de aplicación de Gmail (generada desde Google Account)
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_email_password_aqui
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Modo de depuración
DEBUG=True
SECRET_KEY=tu_secret_key_django_aqui

# Clave API de Google Gemini para análisis inteligente de informes
# Obtener en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Hosts permitidos (separados por coma, sin espacios)
ALLOWED_HOSTS=localhost,127.0.0.1
